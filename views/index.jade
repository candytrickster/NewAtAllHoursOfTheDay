        div#search
            label(for="searchString") Search City:
            input(id="searchCity",name="searchCity",type="text",value="Salt Lake City, UT")
            input(id="submit", name="submit", type="Submit", onclick="search()")
        section#rssFeed
    section#fiveDay
    section#stockTicker
    section#radio
