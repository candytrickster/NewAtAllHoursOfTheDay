doctype
html
    head
        title News At All Hours Of The Day
        link(href='/style/main.css', rel='stylesheet')
        script(src='/scripts/weather.js')
        script(src='/scripts/timeAndDate.js')
        script(src='/scripts/stock.js')
    body(onload='setup()')
        div#menu-bar
            img(id='logo', src='/images/weatherlogoNight.png')
            a(href='/') Home
            a(href='/') Today's Forecast
            a(href='/') 5 Day Forecast
            a(href='/') Stock Ticker
            a(href='/') Radio
            a(href='/') Live News
            p#time 0:0:0
            p#date 0/0/0

    section#today
        p#location location
        p#temperature not real weather
        img(id='weatherpic', src='')
